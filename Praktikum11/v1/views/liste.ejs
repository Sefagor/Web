<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="UTF-8">
    <title>Kategorien</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/flexbox.css" media="screen and (max-width:768px)">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/assets/js/script.js"></script>
</head>

<body>

    <main id="listmain">
        <fieldset id="tutorialsuche">
            <legend>Suchen</legend><br>

        <form action="/submit" method="GET">

            <label>
                Name:
                <input type="text" id="listSearch" name="search" placeholder="Geben Sie den Titel des Tutorials ein ..."
                required minlength="4" maxlength="20" pattern="[A-Za-zÄäÖöÜüß\s]+"
                title="Der Titel muss mit einem Großbuchstaben beginnen und darf nur Buchstaben enthalten.">

            <button type="submit" id="listeSubmitBtn">Suchen!</button>
            </label>
        </form>
        </fieldset>

        <h3>Verfügbare Kategorien</h3>
        <section id="tutorials">
            <% tutorials.forEach(tutorial => { %>
                <a href="/tutorial/<%= tutorial.name %>">
                    <fieldset class="listtutorial">
                        <% if (tutorial.bild && tutorial.bild.url) { %>
                            <img src="<%= tutorial.bild.url %>" alt="<%= tutorial.name %>" width="100" height="100">
                        <% } else { %>
                            <img src="/img/webanwendungen.png" alt="Placeholder Image" width="100" height="100">
                        <% } %>
                        <p style="font-size: 12px; width: 100px;" ><%= tutorial.name %></p>
                    </fieldset>
                </a>
            <% }); %>
        </section>
    </main>

</body>

</html>
